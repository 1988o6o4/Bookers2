<h2>Follower Users</h2>
<% if @users.exists? %>
<!--＃どういう意味？-->
 <% @users.each do |user| %>
<tr>
<td>image</td>
<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
<td>name</td>
<td>
<%= user.name %>
</td>
<td>フォロー数: <%= user.followings.count %></td>
<td>フォロワー数: <%= user.followers.count %></td>
<td>
<%= link_to "Show", user_path(user.id) %>
</td>
<% end %>
</tr>
<% else %>
<%= "ユーザーはいません" %>
<% end %>
