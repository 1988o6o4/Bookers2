<%= flash[:key] %>
<main>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
<h2>User info</h2>
     <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
<table class="table">
 <tbody>
 <tr>
  <th>name</th>
   <th><%= @user.name %></th>
 </tr>
 <tr>
   <th>introduction</th>
   <th><%= @user.introduction %></th>
 </tr>
 <tr>
  <th>follows</th>
<th><%= link_to @user.followings.count, user_followings_path(@user) %></th>
</tr>
<tr>
  <th>followers</th>
 <th><%= link_to @user.followers.count, user_followers_path(@user) %></th>
</tr>
 </tbody>
</table>
<tr>
<% if current_user != @user %>
 <!--#どういう意味？ログインしているユーザーが違うとき-->
　<% if current_user.following?(@user) %>
  <!--#引数で渡したユーザーをフォローしているか判断している-->
    <%= link_to "フォローを外す", user_relationships_path(@user), method: :delete %>
    <!--＃すでにフォローしている相手-->
  <% else %>
    <%= link_to "フォローする", user_relationships_path(@user), method: :post %>
  　<!--＃まだフォローしていない相手-->
  <% end %>
<% end %>
</tr>
<div ="row">
<p><%= link_to "", edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %></p>
</div>
<h2 class="mt-3">New book</h2>
<%= form_with model: @book_new, url:'/books', local:true do |f| %>
  <div class="form-group">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  </div>
  <div class="form-group">
  <!--<lavel for="book_body">Opinion</lavel>-->
  <%= f.label :body, "Opinion" %>
  <%= f.text_area :body %>
  </div>
  <div class="form-group">
  <%= f. submit 'Create Book' %>
  </div>
<% end %>
</div>


<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class=table>
<tbody>
<tr>
<td><%= link_to user_path(@book.user) do %>
<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<% end %></td>
<td>
<%= link_to @user.name, user_path(@book.user) %>
</td>
<td><%= link_to @book.title, book_path(@book.id) %></td>
<td><%= @book.body %></td>
<td><% if @user == current_user %>
<%= link_to "Edit", edit_book_path(@book.id) %></td>
<% end %>
<td><% if @user == current_user %>
<%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
<% end %>
</td>
<td>
コメント数:<%= @book.book_comments.count %>

<% @book.book_comments.each do |book_comment| %>
<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<%= book_comment.user.name %>
<%= book_comment.comment %>
<% if @user == current_user %>
<%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
<% end %>
<% end %>
<% if @book.favorited_by?(current_user) %>
<%= link_to book_favorites_path(@book),method: :delete do %>
♥<%= @book.favorites.count %> いいね
<% end %>

<% else %>
<%= link_to book_favorites_path(@book),method: :post do %>
♡<%= @book.favorites.count %> いいね
<% end %>
<% end %>
<%= form_with(model:[@book,@book_comment],local: true) do |f| %>
<tb><%= f.text_area :comment %></tb>
<tb><%= f.submit "送信" %></tb>
<% end %>
</td>
</td>
<tr>
</tbody>
</table>
</div>
</div>
</div>
</main>