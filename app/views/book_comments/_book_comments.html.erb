コメント数:<%= book.book_comments.count %>
<% book.book_comments.each do |book_comment| %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <%= book_comment.user.name %>
           <%= book_comment.comment %>
       <% if user == current_user %>
       <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true, "data-confirm" => "本当に消しますか?" %>
      <% end %>
    <% end %>
<%= form_with(model:[book,book_comment],remote: true) do |f| %>
<%= f.text_area :comment %>
<%= f.submit "送信" %>
<% end %>