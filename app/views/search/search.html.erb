<% if @modle == "user" %>
<!--＃検索モデルがuserなら-->
<h2>Users search for '<%= @value %>'</h2>
 <tr>
  <th>Name</th>
  <th>Introduction</th>
 </tr>
 <% @dates.each do |user| %>
 <!--#@datesで最終結果を出力-->
  <tr>
   <th><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></th>
   <th><%= user.name %></th>
   <th><%= user.introduction %></th>
  </tr>
  <% end %>
<% elsif @modle == "book" %>
<h2>Books search for '<%= @value %>'</h2>
 <tr>
   <th>Title</th>
   <th>Opinion</th>
 </tr>
 <% @dates.each do |book| %>
 <tr>
   <th><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
   <th><%= book.title %></th>
   <th><%= book.body %></th>
 </tr>
  <% end %>
<% end %>

